<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/each_currency_item_height"
    android:background="@drawable/app_round_corner_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCurrencyCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/app_left_right_padding"
        android:paddingTop="10dp"
        android:textSize="@dimen/regular_text_size"
        android:textColor="@color/typography_primary"
        android:gravity="center"
        android:textStyle="bold"
        tools:text="USD"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvCurrencyAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCurrencyAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/app_left_right_padding"
        android:paddingVertical="10dp"
        android:textSize="@dimen/regular_text_size"
        android:textColor="@color/typography_secondary"
        android:gravity="center"
        tools:text="4.5678"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvCurrencyCode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>